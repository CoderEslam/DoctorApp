<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="background">@color/white</item>
    </style>

    <style name="superBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SlyCalendarDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>


    <style name="SlyCalendarTimeDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
    </style>

    <style name="sans_regular_grey">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="sans_bold_grey">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">#565656</item>
        <item name="colorControlActivated">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Search Text Style. -->
    <style name="SearchTextStyle">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">Search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">#80999999</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="Theme.PixSample" parent="Theme.MaterialComponents.Light.DarkActionBar">

    </style>

    <style name="SeekArc">
        <item name="arcColor">@color/progress_gray_dark</item>
    </style>

    <style name="SeekArcLight">
        <item name="arcColor">@color/progress_gray</item>
    </style>

    <style name="ClickableBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="radioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="textColor">@color/text_grey</item>
        <item name="android:state_checked">true</item>
    </style>


    <style name="alertDialog">
        <item name="background">@color/color_less</item>
        <item name="textColor">@color/green</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_doctor_card"
                android:layout_width="92dp"
                android:layout_height="87dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@color/color_less"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/rubik_medium"
                android:text="Dr.Blessing"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/image_doctor_card"
                app:layout_constraintTop_toTopOf="@+id/image_doctor_card" />

            <TextView
                android:id="@+id/genaral_specalization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:text="Tooths Dentist"
                android:textColor="@color/green"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/image_doctor_card"
                app:layout_constraintTop_toBottomOf="@+id/name_doctor" />

            <TextView
                android:id="@+id/specializations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik_light"
                android:text="kides"
                android:textColor="@color/text_grey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/image_doctor_card"
                app:layout_constraintTop_toBottomOf="@+id/genaral_specalization" />


            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/red" />


            <Button
                android:id="@+id/booking"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/bg_button_green"
                android:text="Book Now"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>